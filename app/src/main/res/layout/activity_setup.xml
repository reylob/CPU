<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Monitor Setup"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Mode:"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/modeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin (Monitor Phone)"
                android:textSize="16sp"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/radioClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client (Monitored Phone)"
                android:textSize="16sp"
                android:padding="12dp"/>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/deviceNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Device Name (e.g., My Phone)"
                android:inputType="text"
                android:padding="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/adminCodeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin Code (Client only)"
                android:inputType="textCapCharacters"
                android:padding="16dp"
                android:visibility="gone"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save and Continue"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin: Monitor other devices\nClient: This device will be monitored"
            android:textSize="12sp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="#666666"/>
    </LinearLayout>
</ScrollView>
