<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dashboard Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Admin Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="0dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/adminCodeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Code: XXXXXXXX"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected Devices: 0"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/refreshBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refresh Status"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#1976D2"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/clearDataBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear All Client Data"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/viewLocationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Location/WiFi Data"
            android:textSize="16sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#0288D1"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/viewCameraBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Live Camera"
            android:textSize="16sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#0288D1"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/viewGalleryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Gallery Photos"
            android:textSize="16sp"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#0288D1"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/viewCapturedCameraBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Captured Camera Images"
            android:textSize="16sp"
            android:padding="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"/>


        <!-- Footer Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All data synced via Firebase (FREE)"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"/>

    </LinearLayout>
</ScrollView>
